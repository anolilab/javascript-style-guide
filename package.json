{
    "name": "javascript-style-guide",
    "private": true,
    "description": "This project is a code style guide of all basic back- and front end project used at Anolilab.",
    "keywords": [],
    "homepage": "https://github.com/anolilab/javascript-style-guide#readme",
    "bugs": {
        "url": "https://github.com/anolilab/javascript-style-guide/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/anolilab/javascript-style-guide.git"
    },
    "license": "MIT",
    "author": "Daniel Bannert <d.bannert@anolilab.de>",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "postinstall": "husky install",
        "jest": "jest",
        "jest:coverage": "jest --coverageDirectory ./coverage --coverage",
        "lint:staged": "lint-staged",
        "lint:styles": "stylelint",
        "lint:text": "textlint ./.build/ISSUE_TEMPLATE/** ./src/** ./docs/** ./README.md ./UPGRADE.md --dry-run",
        "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
        "sort-package-json": "sort-package-json packages/**/package.json",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{js,jsx,less,md,json}": [
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "dependencies": {
        "@commitlint/cli": "12.0.1",
        "@commitlint/config-conventional": "12.0.1",
        "@commitlint/core": "12.0.1",
        "@qiwi/multi-semantic-release": "3.13.2",
        "@semantic-release/changelog": "5.0.1",
        "@semantic-release/commit-analyzer": "8.0.1",
        "@semantic-release/exec": "5.0.0",
        "@semantic-release/git": "9.0.0",
        "@semantic-release/github": "7.2.0",
        "@semantic-release/npm": "7.0.10",
        "@semantic-release/release-notes-generator": "9.0.2",
        "@textlint-rule/textlint-rule-no-invalid-control-character": "1.2.0",
        "@textlint-rule/textlint-rule-no-unmatched-pair": "1.0.7",
        "@textlint-rule/textlint-rule-preset-google": "0.1.2",
        "commitizen": "4.2.3",
        "conventional-changelog-conventionalcommits": "4.5.0",
        "cz-conventional-changelog": "3.3.0",
        "husky": "5.1.3",
        "jest": "26.6.3",
        "lint-staged": "10.5.4",
        "prettier": "2.2.1",
        "pretty-quick": "3.1.0",
        "sort-package-json": "1.49.0",
        "textlint": "11.8.2",
        "textlint-rule-abbr-within-parentheses": "1.0.2",
        "textlint-rule-alex": "3.0.0",
        "textlint-rule-apostrophe": "2.0.0",
        "textlint-rule-common-misspellings": "1.0.1",
        "textlint-rule-diacritics": "1.0.0",
        "textlint-rule-en-capitalization": "2.0.3",
        "textlint-rule-footnote-order": "1.0.3",
        "textlint-rule-helper": "2.1.1",
        "textlint-rule-no-dead-link": "4.7.0",
        "textlint-rule-no-empty-section": "1.1.0",
        "textlint-rule-no-todo": "2.0.1",
        "textlint-rule-terminology": "2.1.5",
        "textlint-rule-write-good": "1.6.2",
        "ts-jest": "26.5.3",
        "typescript": "4.2.3",
        "write-good": "1.0.8",
        "jest-snapshot-serializer-raw": "1.1.0"
    },
    "devDependencies": {
        "@types/jest": "26.0.20",
        "@types/node": "12.20.4"
    }
}
