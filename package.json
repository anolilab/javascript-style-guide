{
    "name": "javascript-style-guide",
    "private": true,
    "description": "This project is a code style guide of all basic back- and front end project used at Anolilab.",
    "keywords": [],
    "homepage": "https://github.com/anolilab/javascript-style-guide#readme",
    "bugs": {
        "url": "https://github.com/anolilab/javascript-style-guide/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/anolilab/javascript-style-guide.git"
    },
    "license": "MIT",
    "author": "Daniel Bannert <d.bannert@anolilab.de>",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "preinstall": "node verify-node-version.cjs",
        "postinstall": "is-ci || husky install",
        "lint:staged": "lint-staged --verbose",
        "lint:styles": "stylelint",
        "lint:text": "textlint \"./packages/**/README.md\" ./README.md ./UPGRADE.md --dry-run --parallel --experimental",
        "lint:text:fix": "textlint \"./packages/**/README.md\" ./README.md ./UPGRADE.md --parallel --experimental --fix",
        "prettier": "prettier --config=.prettierrc.cjs --write '**/*.{js,jsx,cjs,tsx,ts,less,md,json}'",
        "sort-package-json": "sort-package-json ./packages/**/package.json",
        "test": "jest --config=./jest.config.cjs",
        "test:all": "pnpm test && pnpm test:stylelint && pnpm test:babel",
        "test:babel": "babel --config-file=./packages/babel-preset/index.cjs ./packages/babel-preset/fixture/test.ts --out-file=./packages/babel-preset/fixture/test.js",
        "test:coverage": "jest --config=./jest.config.cjs --coverageDirectory=./coverage --coverage",
        "test:stylelint": "node scripts/isNotWindows || stylelint --formatter verbose --config ./packages/stylelint-config/index.cjs ./packages/stylelint-config/__tests__/css/**/*.css"
    },
    "dependencies": {
        "@babel/cli": "^7.17.0",
        "@babel/core": "^7.17.2",
        "@babel/preset-env": "^7.16.11",
        "@commitlint/cli": "16.2.1",
        "@commitlint/config-conventional": "16.2.1",
        "@commitlint/core": "16.2.1",
        "@qiwi/multi-semantic-release": "3.17.1",
        "@semantic-release/changelog": "6.0.1",
        "@semantic-release/commit-analyzer": "9.0.2",
        "@semantic-release/exec": "6.0.3",
        "@semantic-release/git": "10.0.1",
        "@semantic-release/github": "8.0.2",
        "@semantic-release/npm": "9.0.0",
        "@semantic-release/release-notes-generator": "10.0.3",
        "babel-jest": "^27.5.1",
        "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
        "commitizen": "4.2.4",
        "conventional-changelog-conventionalcommits": "4.6.3",
        "cz-conventional-changelog": "3.3.0",
        "husky": "7.0.4",
        "is-ci": "^3.0.1",
        "is-windows": "^1.0.2",
        "jest": "27.5.1",
        "jest-snapshot-serializer-raw": "1.2.0",
        "lint-staged": "^12.3.4",
        "lodash": "^4.17.21",
        "postcss": "^8.4.6",
        "prettier": "2.5.1",
        "semantic-release": "^19.0.2",
        "sort-package-json": "1.54.0",
        "stylelint": "14.5.0",
        "textlint": "12.1.0",
        "ts-jest": "27.1.3",
        "typescript": "4.5.5"
    },
    "devDependencies": {
        "@types/jest": "27.4.1",
        "@types/node": "16.11.26"
    }
}
