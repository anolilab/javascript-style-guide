{
    "name": "@anolilab/lint-staged-config",
    "version": "1.0.0",
    "description": "Shareable Lint-Staged Config for any project.",
    "keywords": [
        "anolilab",
        "lint",
        "lint-staged",
        "config",
        "lint-staged-config"
    ],
    "homepage": "https://anolilab.com/nodejs/packages/lint-staged-config",
    "repository": {
        "type": "git",
        "url": "https://github.com/anolilab/javascript-style-guide.git",
        "directory": "packages/lint-staged-config"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        },
        "./group/eslint": {
            "types": "./dist/groups/eslint.d.ts",
            "require": "./dist/groups/eslint.js",
            "import": "./dist/groups/eslint.mjs"
        },
        "./group/package-json": {
            "types": "./dist/groups/package-json.d.ts",
            "require": "./dist/groups/package-json.js",
            "import": "./dist/groups/package-json.mjs"
        },
        "./group/prettier": {
            "types": "./dist/groups/prettier.d.ts",
            "require": "./dist/groups/prettier.js",
            "import": "./dist/groups/prettier.mjs"
        },
        "./group/secretlint": {
            "types": "./dist/groups/secretlint.d.ts",
            "require": "./dist/groups/secretlint.js",
            "import": "./dist/groups/secretlint.mjs"
        },
        "./group/stylesheets": {
            "types": "./dist/groups/stylesheets.d.ts",
            "require": "./dist/groups/stylesheets.js",
            "import": "./dist/groups/stylesheets.mjs"
        },
        "./group/tests": {
            "types": "./dist/groups/tests.d.ts",
            "require": "./dist/groups/tests.js",
            "import": "./dist/groups/tests.mjs"
        },
        "./group/typescript": {
            "types": "./dist/groups/typescript.d.ts",
            "require": "./dist/groups/typescript.js",
            "import": "./dist/groups/typescript.mjs"
        },
        "./package.json": "./package.json"
    },
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md",
        "LICENSE.md"
    ],
    "scripts": {
        "build": "cross-env NODE_ENV=development tsup",
        "build:prod": "cross-env NODE_ENV=production tsup",
        "clean": "rimraf node_modules dist",
        "postinstall": "node ./skip.js || node ./dist/postinstall.js"
    },
    "dependencies": {
        "cross-env": "^7.0.3",
        "@anolilab/package-json-utils": "1.5.0"
    },
    "devDependencies": {
        "@anolilab/semantic-release-preset": "4.0.1",
        "semantic-release": "^21.0.5",
        "lint-staged": "^13.2.2",
        "@types/lint-staged": "^13.2.0",
        "tsup": "^6.7.0",
        "typescript": "5.1.3",
        "husky": "^8.0.3"
    },
    "optionalDependencies": {
        "secretlint": "^6.2.3",
        "eslint": "^7.32.0",
        "stylelint": "^15.9.0",
        "prettier": "^2.8.8",
        "pretty-quick": "^3.1.3",
        "vite": "^4.3.9",
        "jest": "^29.5.0"
    },
    "peerDependencies": {
        "lint-staged": "^13.x",
        "husky": "^8.x"
    },
    "engines": {
        "node": ">=16"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "sources": [
        "src/index.ts",
        "src/postinstall.ts",
        "src/groups/eslint.ts",
        "src/groups/package-json.ts",
        "src/groups/prettier.ts",
        "src/groups/secretlint.ts",
        "src/groups/stylesheets.ts",
        "src/groups/tests.ts",
        "src/groups/typescript.ts"
    ]
}
