{
    "name": "@anolilab/stylelint-config",
    "version": "4.0.1",
    "description": "Stylelint shareable config for the Anolilab stylesheet guide.",
    "keywords": [
        "css",
        "lint",
        "sass",
        "scss",
        "style",
        "stylelint",
        "stylelint-config",
        "anolilab"
    ],
    "homepage": "https://anolilab.com/nodejs/packages/stylelint-config",
    "repository": {
        "type": "git",
        "url": "https://github.com/anolilab/javascript-style-guide.git",
        "directory": "packages/stylelint-config"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "exports": {
        ".": {
            "require": "./index.js",
            "import": "./index.mjs"
        },
        "./package.json": "./package.json"
    },
    "main": "index.js",
    "module": "index.mjs",
    "files": [
        "dist/**",
        "README.md",
        "CHANGELOG.md",
        "LICENSE.md",
        "index.js",
        "index.mjs"
    ],
    "scripts": {
        "build": "cross-env NODE_ENV=development tsup",
        "build:prod": "cross-env NODE_ENV=production tsup",
        "clean": "rimraf node_modules dist",
        "postinstall": "node ./skip.js || node ./dist/postinstall.js",
        "test": "vitest --config ./vitest.config.ts",
        "test:coverage": "vitest --config ./vitest.config.ts --run --coverage"
    },
    "dependencies": {
        "@anolilab/package-json-utils": "1.3.0",
        "browserslist-config-anolilab": "4.0.3",
        "stylelint-a11y": "^1.2.3",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-standard": "^33.0.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.7.0",
        "stylelint-no-unsupported-browser-features": "^6.1.0",
        "stylelint-order": "^6.0.3",
        "stylelint-require-units": "^1.0.2",
        "stylelint-selector-no-empty": "^1.0.9"
    },
    "devDependencies": {
        "@anolilab/semantic-release-preset": "3.1.1",
        "postcss": "^8.4.24",
        "semantic-release": "^21.0.5",
        "stylelint": "15.8.0",
        "vitest": "^0.32.2"
    },
    "peerDependencies": {
        "postcss": "^8.4.18",
        "stylelint": "^14.0.0 || ^15.0.0"
    },
    "engines": {
        "node": ">=16"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "sources": [
        "src/rules/a11y.ts",
        "src/rules/declaration-block-no-ignored-properties.ts",
        "src/rules/no-unsupported-browser-features.ts",
        "src/rules/rational-order.ts",
        "src/rules/require-units.ts",
        "src/rules/selector-no-empty.ts",
        "src/rules/standard.ts",
        "src/postinstall.ts"
    ]
}
