{
    "name": "@anolilab/lint-staged-config",
    "version": "6.0.0",
    "description": "Shareable Lint-Staged Config for any project.",
    "keywords": [
        "anolilab",
        "lint",
        "lint-staged",
        "nano-staged",
        "config",
        "lint-staged-config",
        "nano-staged-config",
        "vitest",
        "ava",
        "jest",
        "eslint",
        "prettier",
        "stylelint",
        "secretlint"
    ],
    "homepage": "https://anolilab.com/nodejs/packages/lint-staged-config",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/anolilab/javascript-style-guide.git",
        "directory": "packages/lint-staged-config"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/prisis"
        },
        {
            "type": "consulting",
            "url": "https://anolilab.com/support"
        }
    ],
    "license": "MIT",
    "author": {
        "name": "Daniel Bannert",
        "email": "d.bannert@anolilab.de"
    },
    "sideEffects": false,
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "lint-stage-config:install": "./dist/bin.js"
    },
    "files": [
        "CHANGELOG.md",
        "LICENSE.md",
        "README.md",
        "dist"
    ],
    "scripts": {
        "build": "packem build --development",
        "build:prod": "packem build --production",
        "clean": "rimraf node_modules dist",
        "lint:attw": "attw --pack",
        "lint:eslint": "eslint . --cache --concurrency auto",
        "lint:eslint:fix": "eslint . --cache --concurrency auto --fix",
        "lint:prettier": "prettier .",
        "lint:prettier:fix": "prettier --write .",
        "lint:types": "tsc --noEmit",
        "test": "vitest --config ./vitest.config.ts",
        "test:coverage": "vitest --config ./vitest.config.ts --run --coverage"
    },
    "dependencies": {
        "@visulima/fs": "catalog:prod",
        "@visulima/package": "catalog:prod",
        "shell-quote": "catalog:prod",
        "type-fest": "catalog:prod"
    },
    "devDependencies": {
        "@anolilab/eslint-config": "22.0.0",
        "@anolilab/prettier-config": "9.1.1",
        "@anolilab/semantic-release-pnpm": "catalog:cli",
        "@anolilab/semantic-release-preset": "catalog:cli",
        "@arethetypeswrong/cli": "catalog:dev",
        "@total-typescript/ts-reset": "catalog:tsc",
        "@types/shell-quote": "catalog:types",
        "@visulima/packem": "catalog:dev",
        "@vitest/coverage-v8": "catalog:test",
        "esbuild": "catalog:build",
        "eslint": "catalog:lint",
        "husky": "catalog:lint",
        "lint-staged": "catalog:lint",
        "prettier": "catalog:lint",
        "rimraf": "catalog:node",
        "semantic-release": "catalog:cli",
        "typescript": "catalog:tsc",
        "vitest": "catalog:test"
    },
    "peerDependencies": {
        "eslint": "catalog:lint",
        "husky": "^9.x",
        "jest": "^29.0.0",
        "lint-staged": "^16.x",
        "nano-staged": "catalog:peer",
        "prettier": "catalog:lint",
        "secretlint": "^11.0.0",
        "stylelint": "^16.x || ^17.x",
        "vitest": "^3.x || ^4.x"
    },
    "peerDependenciesMeta": {
        "eslint": {
            "optional": true
        },
        "jest": {
            "optional": true
        },
        "lint-staged": {
            "optional": true
        },
        "nano-staged": {
            "optional": true
        },
        "prettier": {
            "optional": true
        },
        "secretlint": {
            "optional": true
        },
        "stylelint": {
            "optional": true
        },
        "vitest": {
            "optional": true
        }
    },
    "optionalDependencies": {},
    "engines": {
        "node": ">=20.18.* <=25.*"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    }
}
